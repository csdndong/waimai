page {
    font-size: 14px;
    background-color: #f5f5f5;
}

.page-orderlist .nav-tab {
    height: 50px;
    font-size: 14px;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
}

.page-orderlist .nav-tab .nav-item {
    height: 100%;
    width: 50%;
    text-align: center;
    line-height: 50px;
    color: #333;
    position: relative;
}

.page-orderlist .nav-tab .nav-item.active {
    font-weight: bold;
    color: #4FAE52;
}

.page-orderlist .nav-tab .nav-item.active:after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 10%;
    width: 80%;
    height: 3px;
    background-color: #4FAE52;
}

.page-orderlist .order-wrap {
    box-sizing: border-box;
    width: 100%;
    background-color: #f5f5f5;
}

.page-orderlist .order-item {
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 0px 10px 10px;
    background-color: #fff;
    margin-bottom: 10px;
}

.page-orderlist .order-item:last-child {
    margin-bottom: 0;
}

.page-orderlist .order-item .distance {
    padding: 10px 0;
}

.page-orderlist .order-item .distance image {
    width: 25px;
}

.page-orderlist .order-item .distance .order-number {
    font-size: 18px;
    color: #DE8932;
    padding-right: 10px;
}

.page-orderlist .order-item .distance .price {
    height: 100%;
    padding-left: 10px;
    font-size: 16px;
    color: #A03332;
}

.page-orderlist .order-item .address .address-item {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    margin: 10px 0;
}

.page-orderlist .order-item .address .address-item .title {
    width: 10%;
    color: #268BE8;
}

.page-orderlist .order-item .address .address-item .detail {
    width: 90%;
    font-size: 15px;
}

.page-orderlist .order-item .address-item .detail .address-store {
    max-width: 100%;
    color: #939393;
}

.page-orderlist .order-item .address-item.customer .title {
    color: #67B374;
}

.page-orderlist .order-item .address-item.customer .detail {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.page-orderlist .order-item .time {
    margin: 10px 0;
}

.page-orderlist .order-item .time .time-item {
    border: 1px solid #E1E893;
    border-radius: 100px;
    font-size: 12px;
    color: #D7E545;
    padding: 2px 10px;
}

.page-orderlist .order-item .rap-btn {
    width: 100%;
    border-radius: 5px;
    text-align: center;
    padding: 10px 0;
    font-size: 15px;
    color: #fff;
    background-color: #4FAE52;
    box-sizing: border-box;
    margin-top: 10px;
}

.page-orderlist .order-item .rap-btn.danger {
    background-color: #f6383a;
}

.page-orderlist .order-item .btn-groups .btn-item {
    width: 48%;
    border-radius: 5px;
}

.page-orderlist .order-item .btn-groups .btn-item view {
    padding: 8px 0;
    text-align: center;
    font-size: 15px;
}

.page-orderlist .order-item .btn-groups .btn-item.phone {
    border: 2px solid #0463CC;
    color: #0463CC;
}

.page-orderlist .order-item .btn-groups .rap-btn {
    border: 2px solid #4FAE52;
    margin-top: 0;
}

.page-orderlist .order-item .btn-groups .danger {
    border: 2px solid #f6383a;
    margin-top: 0;
}

.page-orderlist .order-item .btn-groups .btn-item .name {
    width: 20%;
    border-right: 1rpx solid #0463CC;
}

.page-orderlist .order-item .btn-groups .btn-item .tel {
    width: 80%;
}

.page-orderlist .order-item .btn-groups .btn-item.customer {
    border-color: #4FAE52;
    color: #4FAE52;
}

.page-orderlist .order-item .btn-groups .btn-item.customer .name {
    border-color: #4FAE52;
}

.page-orderlist .order-item .remark {
    padding: 10px;
    margin: 10px 0;
    background-color: #FECEAA;
    color: #B28155;
    font-size: 14px;
    display: flex;
    justify-content: space-between;
}

.page-orderlist .order-item .remark .name {
    width: 15%;
}

.page-orderlist .order-item .remark .content {
    width: 85%;
    word-wrap: break-word;
}

.page-orderlist .nodata {
    width: 100%;
    box-sizing: border-box;
    position: relative;
}

.page-orderlist .nodata .nodata-container {
    width: 90%;
    height: 120px;
    position: absolute;
    top: 160px;
    left: 50%;
    transform: translateX(-50%);
}

.page-orderlist .nodata .box-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background-color: #d8d8d8;
    text-align: center;
    line-height: 80px;
    margin: 0 auto;
}

.page-orderlist .nodata .box-icon .icon {
    color: #fff;
    font-size: 30px;
}

.page-orderlist .nodata .text {
    text-align: center;
    height: 40px;
    line-height: 40px;
    color: #96959B;
}

.page-orderlist .order-item .delivery-pay {
    position: absolute;
    width: 110px;
    height: 70px;
    left: 50%;
    margin-left: -50px;
    bottom: 130px;
    background: url("http://1.duoxunwl.com/addons/we7_wmall/static/img/delivery-pay.png") no-repeat center center;
    background-size: 100% 100%;
}

.page-orderlist .order-item .have-pay {
    position: absolute;
    width: 100px;
    height: 50px;
    left: 50%;
    margin-left: -50px;
    bottom: 130px;
    background: url("http://1.duoxunwl.com/addons/we7_wmall/static/img/have-pay.png") no-repeat center center;
    background-size: 100% 100%;
}