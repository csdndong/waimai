page {
    font-size: 14px;
    background-color: #f5f5f5;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.page-shopsetting .header {
    background-color: #33aafc;
    text-align: center;
    color: #fff;
    padding: 10px 0;
}

.page-shopsetting .header .logo {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 2px solid #fff;
    margin: 0 auto;
    font-size: 0;
}

.page-shopsetting .header .logo image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.page-shopsetting .header .title {
    width: 100%;
    box-sizing: border-box;
    padding: 0 15px;
    margin-top: 10px;
    font-size: 15px;
}

.page-shopsetting .zan-cell {
    height: 48px;
    box-sizing: border-box;
}

.page-shopsetting .zan-cell_title {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.page-shopsetting .zan-cell_title .img {
    width: 25px;
    height: 25px;
    font-size: 0;
    margin-right: 10px;
}

.page-shopsetting .zan-cell_title .img image {
    width: 100%;
    height: 100%;
}

.page-shopsetting .weui-btn {
    margin: 15px;
    background-color: #33aafc;
}