.head>view:nth-child(2) {
    width: 100%;
    height: 100rpx;
    border-radius: 0 0 50% 50% / 100%;
}

.head>view:nth-child(1) {
    width: 100%;
    height: 240rpx;
}

.order_num {
    width: 95%;
    height: 100%;
    position: fixed;
    top: 0;
}

.order_head {
    display: flex;
}

.order_head>view {
    flex: 2;
}

.order_head>view:nth-child(1) {
    border-right: 2rpx solid #fff;
}

.list_0 {
    display: flex;
    height: 190rpx;
    border-radius: 8rpx;
    overflow: hidden;
    padding: 40rpx 20rpx;
}

.list_0>view {
    flex: 2;
}

.list_0>view:nth-child(1) {
    border-right: 2rpx solid #e5e5e5;
}

.list_0>view image {
    width: 80%;
}