<view class="page">
	<view class="sxlb">
		<view bindtap="chosetype" class="sxlbv" style="color:{{selecttype?color:''}};border-bottom:{{selecttype?2:'0'}}rpx solid {{color}}">
			<view>{{typename}}</view>
			<image class="{{selecttype?'xs':'xx'}}" src="../../../img/down1.png"></image>
		</view>
		<view bindtap="chosedate" class="sxlbv" style="color:{{selectdate?color:''}};border-bottom:{{selectdate?2:'0'}}rpx solid {{color}}">
			<view>日期范围</view>
			<image class="{{selectdate?'xs':'xx'}}" src="../../../img/down1.png"></image>
		</view>
		<view class="sorting-list {{!selecttype?' chioce-list-hide':' chioce-list-show'}}">
			<block wx:for="{{datetype}}" wx:for-item="item" wx:for-index="index" >
				<view bindtap="xztype" class="sorting-item " data-index="{{index}}">{{item}}</view>
			</block>
		</view>
		<view class="sorting-list {{!selectdate?' chioce-list-hide':' chioce-list-show'}}">
			<view class="weui-cell weui-cell_input">
				<view class="weui-cell__hd">
					<view class="weui-label">起始日期</view>
				</view>
				<view class="weui-cell__bd">
					<picker bindchange="bindTimeChange" end="" mode="date" start="" value="{{timestart}}">
						<view class="weui-input">{{timestart}}</view>
					</picker>
				</view>
				<view class="weui-cell__ft weui-cell__ft_in-access"></view>
			</view>
			<view class="weui-cell weui-cell_input">
				<view class="weui-cell__hd">
					<view class="weui-label">结束日期</view>
				</view>
				<view class="weui-cell__bd">
					<picker bindchange="bindTimeChange1" end="" mode="date" start="" value="{{timeend}}">
						<view class="weui-input">{{timeend}}</view>
					</picker>
				</view>
				<view class="weui-cell__ft weui-cell__ft_in-access"></view>
			</view>
			<view class="datebtn">
				<button catchtap="repeat" class="jjjd" data-id="{{oitem.order.id}}">重置</button>
				<button catchtap="find" data-id="{{oitem.order.id}}" style="background:{{color}};color: #fff;">查找</button>
			</view>
		</view>
	</view>
	<view bindtap="hidemask" class="mask" hidden="{{!selecttype&&!selectdate}}"></view>
	<view class="head">
		<block wx:for="{{topnav}}" wx:for-item="item" wx:for-index="index" >
			<view bindtap="selectednavbar" class="topnav" data-index="{{index}}">
				<view class="topimg" style="background:{{selectedindex==index?color:''}}">
					<block wx:if="{{selectedindex==index}}" >
						<image mode="widthFix" src="{{item.img}}"></image>
					</block>
					<block wx:else>
						<image mode="widthFix" src="{{item.img1}}"></image>
					</block>
				</view>
				<view style="color:{{selectedindex==index?color:''}}">{{item.name}}</view>
			</view>
		</block>
	</view>
	<view class="main">
		<block wx:if="{{order_list.length==0&&mygd}}">
			<view class="no-data-tip zwdd">
				<image mode="aspectFit" src="../../../img/list.png"></image>
				<view>您暂无相关订单哦~</view>
			</view>
		</block>
		<block wx:for="{{order_list}}" wx:for-item="oitem" wx:for-index="oindex" >
			<navigator class="weui-cells weui-cells_after-title" hoverClass="none" style="filter: {{oitem.order.dn_state==3?'grayscale(100%)':''}};background:{{oitem.order.dn_state==3?'#EDEDED':''}}" url="dnddxq?oid={{oitem.order.id}}">
				<view class="weui-cell">
					<view class="weui-cell__hd ddxh" style="color:{{color}}">#{{oitem.order.id}}</view>
					<view class="weui-cell__bd">{{oitem.order.name}}</view>
					<block wx:if="{{oitem.order.dn_state=='1'}}">
						<view class="weui-cell__ft" style="color:{{color}}">待付款</view>
					</block>
					<block wx:if="{{oitem.order.dn_state=='2'}}">
						<view class="weui-cell__ft" style="color:{{color}}">已完成</view>
					</block>
					<block wx:if="{{oitem.order.dn_state=='3'}}">
						<view class="weui-cell__ft" style="color:{{color}}">已关闭</view>
					</block>
				</view>
				<view style="font-size:22rpx;color:#999;padding:10rpx 30rpx 20rpx;">下单时间：{{oitem.order.time}}</view>
				<view class="weui-cell bold">
					<view class="weui-cell__hd">支付方式：</view>
					<block wx:if="{{oitem.order.pay_type=='1'}}">
						<view class="weui-cell__ft" style="color:#66CD00">微信支付</view>
					</block>
					<block wx:if="{{oitem.order.pay_type=='2'}}">
						<view class="weui-cell__ft" style="color:#EEAD0E">余额支付</view>
					</block>
					<block wx:if="{{oitem.order.pay_type=='5'}}">
						<view class="weui-cell__ft" style="color:#FF6347">餐后支付</view>
					</block>
				</view>
				<view catchtap="kindToggle" class="weui-cell" id="{{oindex}}">
					<view class="weui-cell__hd">商品信息：</view>
					<view class="weui-cell__bd" style="color:#999;font-size:22rpx;">{{oitem.good[0].name}}等{{oitem.num}}件商品</view>
					<view class="weui-cell__ft">
						<image class="{{oitem.open?'xs':'xx'}}" mode="aspectFit" src="../../../img/down1.png"></image>
					</view>
				</view>
				<block wx:for="{{oitem.good}}" wx:for-item="item" wx:for-index="index" >
					<block wx:if="{{oitem.open}}">
						<view class="weui-cell">
							<view class="weui-cell__hd">
								<image src="{{item.img}}"></image>
							</view>
							<view class="weui-cell__bd">{{item.name}}</view>
							<view class="weui-cell__ft cpjg">
								<text>x{{item.number}}</text>￥{{item.money}}							</view>
						</view>
					</block>
				</block>
				<view class="weui-cell" data-tel="{{oitem.order.tel}}">
					<view class="weui-cell__hd">订单金额：</view>
					<view class="weui-cell__bd" style="color:{{color}}">{{oitem.order.money}}元</view>
				</view>
				<view class="ddxx">
					<view class="flex-bet">
						<view>订单编号：{{oitem.order.order_num}}</view>
						<view catchtap="dyxp" class="dyxp" data-id="{{oitem.order.id}}" style="color:{{color}};border-color:{{color}};margin-right:37rpx;">打印小票</view>
					</view>
					<block wx:if="{{oitem.order.note!=''}}">
						<view>备注：{{oitem.order.note}}</view>
					</block>
				</view>
				<view class="footbtn">
					<block wx:if="{{oitem.order.dn_state=='1'}}">
						<button catchtap="jjjd" class="jjjd" data-id="{{oitem.order.id}}">关闭订单</button>
					</block>
					<block wx:if="{{oitem.order.dn_state=='1'&&oitem.order.pay_type=='5'}}">
						<button catchtap="wcps" class="djjd" data-id="{{oitem.order.id}}" style="background:{{color}};color: #fff;">确认收款</button>
					</block>
				</view>
			</navigator>
		</block>
		<view class="jzz" hidden="{{mygd}}">
			<image class="Rotation" src="../../../img/jzz.png"></image>
			<view>加载中...</view>
		</view>
		<block wx:if="{{mygd}}">
			<view class="jzwb">
				<view class="hx"></view>
				<view class="wz">加载完毕</view>
				<view class="hx"></view>
			</view>
		</block>
	</view>
</view>
<view class="dbbtn">
	<block wx:if="{{tablestatus=='1'}}" >
		<button catchtap="qkt" data-id="{{oitem.order.id}}" style="background:{{color}};color: #fff;">清台</button>
	</block>
	<block wx:else>
		<button catchtap="qkt" data-id="{{oitem.order.id}}" style="background:{{color}};color: #fff;">开台</button>
	</block>
</view>
