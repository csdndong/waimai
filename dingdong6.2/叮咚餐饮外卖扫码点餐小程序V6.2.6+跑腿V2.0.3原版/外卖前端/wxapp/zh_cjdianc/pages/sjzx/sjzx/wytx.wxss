.show{ transform: rotate(90deg); -ms-transform: rotate(90deg); -webkit-transform: rotate(90deg) }
.txbd{margin: 30rpx 30rpx 20rpx;border-radius: 20rpx;padding: 10rpx}
.txbd .weui-cell{ padding: 15rpx 30rpx; }
