.addright{ width: 20rpx; height: 30rpx; margin-left: 20rpx; }
.czhd{ display: flex; flex: 1; flex-direction: row; align-items: center; font-size:26rpx; color: #666; }
.czhd view{ line-height: 90rpx; text-align: right; }
.czhd text{ color: #ff6161; margin: 0 10rpx; }
.czhd1{ background: #fff; padding: 0 30rpx 20rpx; font-size: 28rpx; color: #666; }
