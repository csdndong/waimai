page{ background-color: #F5F5F5; }
.head{ width: 100%; box-sizing: border-box; padding: 20rpx 20rpx 30rpx; }
.head .text{ font-size: 30rpx; color: #fff; text-decoration: underline; text-align: right; }
.headmoney{ font-size:50rpx; color: #fff; text-align: center; }
.headwz{ font-size:30rpx; color: #fff; text-align: center; }
.weui-cell{ padding: 20rpx 30rpx; }
.weui-cell:before{ left: 15px; right: 15px; }
.weui-cells{ font-size: 30rpx; margin-top: 20rpx; color: #666; }
.weui-cell__bd{ color: #666 }
.weui-cell__ft{ color: #333; }
.weui-cells__title{ font-size: 30rpx; padding: 20rpx 30rpx; background: #fff; color: #666; margin-top: 20rpx; margin-bottom: 0; }
