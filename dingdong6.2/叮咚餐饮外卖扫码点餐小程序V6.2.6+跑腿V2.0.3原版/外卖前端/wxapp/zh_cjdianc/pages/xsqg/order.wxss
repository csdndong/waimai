.tab-bar{ background: #fff; border-bottom: 1rpx solid #e3e3e3; position: fixed; top:0; left: 0; width: 100%; z-index: 1000; }
.tab-bar ~ .order-list{ padding-top: 100rpx; padding-bottom: 115rpx; }
.tab-bar wx-navigator{ display: block; padding:0 24rpx; text-align: center; }
.tab-bar wx-navigator text{ height: 90rpx; line-height: 90rpx; display: inline-block; }
.tab-bar wx-navigator.active text{ color: #f00; border-bottom: 2rpx solid #f00; }
.order-list .order-item{ background: #fff; padding:32rpx 24rpx 0; margin-bottom: 20rpx; border-bottom: 1rpx solid #e3e3e3; }
